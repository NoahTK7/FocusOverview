{
  "name": "Focus Overview",
  "version": "0.0.1",
  "description": "Shows all grades on dashboard page.",
  "background": {
    "scripts": [
      "src/background/background.js"
    ],
    "persistent": false
  },
  "page_action": {
    "default_title": "Focus Overview"
  },
  "permissions" : [
    "declarativeContent",
    "tabs",
    "storage"
  ],
  "content_scripts": [
    {
      "matches": ["https://focusk12.polk-fl.net/focus/Modules.php*"],
      "css": ["src/inject/inject.css"],
      "js": ["assets/libs/jquery-3.1.1.min.js", "assets/libs/jquery-ui-1.12.1/jquery-ui.min.js", "src/inject/inject.js"]
    }
  ],
  "web_accessible_resources": [
    "assets/libs/*",
    "assets/templates/grade-template.html"
  ],
  "manifest_version": 2
}